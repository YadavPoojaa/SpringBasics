<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="triangle" class="org.spring.example.interfacecoding.Triangle">
		<property name="pointA" ref="point1"></property>
		<property name="pointB" ref="point2"></property>
		<property name="pointC" ref="point3"></property>
	</bean>
	
	<bean id="circle" class="org.spring.example.interfacecoding.Circle">
		<property name="center" ref="point1"></property>
	</bean>
	
	<bean id="point1" class="org.spring.example.interfacecoding.Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>
	
	<bean id="point2" class="org.spring.example.interfacecoding.Point">
		<property name="x" value="0"></property>
		<property name="y" value="-10"></property>
	</bean>
	
	<bean id="point3" class="org.spring.example.interfacecoding.Point">
		<property name="x" value="10"></property>
		<property name="y" value="0"></property>
	</bean>
	
	
	
</beans>